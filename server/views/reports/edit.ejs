<% include ../partials/main_nav.ejs %>
<% include ../partials/header.ejs %>

<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h1><%= title %></h1>
      <p>You can edit information in the  form below. All fields are mandatory.</p>
      <form class="form" method="post">
        <div class="form-group">
          <label for="IdTextField">CaseID</label>
          <input
            type="text"
            class="form-control"
            id="IdTextField"
            placeholder="CaseID"
            name="caseID"
            value="<%= incident_reports.caseID %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="NameTextField">Date</label>
          <input
            type="text"
            class="form-control"
            id="NameTextField"
            placeholder="Incident date"
            name="date"
            value="<%= incident_reports.date %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="DescTextField">Name</label>
          <input
            type="text"
            class="form-control"
            id="DescTextField"
            placeholder="Persons name"
            name="name"
            value="<%= incident_reports.name %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="PriceTextField">Details</label>
          <input
            type="text"
            class="form-control"
            id="PriceTextField"
            placeholder="Incident details"
            name="details"
            value="<%= incident_reports.details %>"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary">
          <i class="fa fa-check-square-o"></i> Submit
        </button>
        <a href="/reports" class="btn btn-warning"
          ><i class="fa fa-undo"></i> Cancel</a
        >
      </form>
    </div>
  </div>
</div>

<% include ../partials/bottom_nav.ejs %>

<% include ../partials/footer.ejs %>

